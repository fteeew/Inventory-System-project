<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.project.AddProduct">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="-26dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="31dp"
            android:shadowColor="@android:color/holo_blue_dark"
            android:text="Product Information"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="55dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="Name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ProductName"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignLeft="@+id/ProductUnit"
            android:layout_alignStart="@+id/ProductUnit"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="set name"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/price"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/name"
            android:layout_alignStart="@+id/name"
            android:layout_below="@+id/name"
            android:layout_marginTop="32dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="Price"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/unit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/price"
            android:layout_alignStart="@+id/price"
            android:layout_below="@+id/price"
            android:layout_marginTop="35dp"
            android:paddingLeft="20dp"
            android:paddingStart="20dp"
            android:text="Unit"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ProductPrice"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignBaseline="@+id/price"
            android:layout_alignBottom="@+id/price"
            android:layout_alignLeft="@+id/ProductName"
            android:layout_alignStart="@+id/ProductName"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="set price"
            android:textColor="@android:color/background_dark" />

        <EditText
            android:id="@+id/ProductUnit"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/unit"
            android:layout_marginEnd="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="0dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="set unit"
            android:textColorHint="@android:color/black" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_blue_dark"
            android:text="add"
            android:textColor="@android:color/black"
            android:layout_below="@+id/ProductUnit"
            android:layout_toRightOf="@+id/unit"
            android:layout_toEndOf="@+id/unit"
            android:layout_marginTop="35dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:background="@android:color/holo_blue_dark"
            android:text="Cancel"
            tools:layout_editor_absoluteX="26dp"
            tools:layout_editor_absoluteY="409dp"
            android:layout_alignBaseline="@+id/add"
            android:layout_alignBottom="@+id/add"
            android:layout_alignLeft="@+id/unit"
            android:layout_alignStart="@+id/unit" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
